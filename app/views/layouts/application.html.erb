<!DOCTYPE html>
<html>
  <head>
    <title>Clonestagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">

        <% if @current_user.present? %>
          <a href="/"><h1 id="logo-font">Clonestagram</h1></a>
          <%= yield %>
          <footer>
            <nav>
              <%= link_to "Home", root_path %> <%#news feed  %>
              <%= link_to "Profile", user_path(@current_user) %>
              <%= link_to "Create", new_photo_path %> <%#add photo to profile  %>
              <%= link_to "Log out as #{ @current_user.username }", login_path, :method => :delete %>
            </nav>
          </footer>
        <% else %>
          <%#additional yeild for else sign up or log in conditions  %>
          <%= yield(:no_user) %>  
        <% end %>

    </div>
  </body>
</html>
