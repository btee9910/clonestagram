<!DOCTYPE html>
<html>
  <head>
    <title>Clonestagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# <%= cloudinary_ %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
          <% if @current_user.present? %>
            
            <a href="/"><h1 id="logo-font">Clonestagram</h1></a>
            <%= yield %>
            <footer>
            <nav>
              <%= link_to "Home", root_path %>
              <%= link_to "Profile", user_path(@current_user) %>
              <%= link_to "Create", new_photo_path %>
              <%= link_to "Log out as #{ @current_user.username }", login_path, :method => :delete %>
            </nav>
            </footer>
          <% else %>
            <%= yield(:no_user) %>
          <% end %>
    </div>

  </body>
</html>
