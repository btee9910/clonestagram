<br>
<div class="form-container">

    <a href="/"><h1 id="logo-font">Clonestagram</h1></a>
    <p><b>Edit info</b></p>

    <%# Error message  %>
    <% if @user.errors.any? %>
        <ol>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ol>
    <% end %>

    <%= form_for @user do |f| %>
        <%= f.label :display_name, :class => 'form-label' %>
        <%= f.text_field :display_name, :class => 'form-control'%>
        <br>
        <%= f.label :username, :class => 'form-label' %>
        <%= f.text_field :username, :class => 'form-control'%>
        <br>
        <%= f.label :website, :class => 'form-label' %>
        <%= f.url_field :website, :class => 'form-control'%>
        <br>
        <%= f.label :biography, "Bio", :class => 'form-label' %>
        <%= f.text_field :biography, :class => 'form-control'%>
        <br>

        <%= f.label :email, :class => 'form-label' %>
        <%= f.email_field :email, :class => 'form-control'%>
        <br>
        <%= f.label :phone_number, :class => 'form-label' %>
        <%= f.number_field :phone_number, :class => 'form-control'%>
        <br>

        <%= f.submit "Submit"%>
        <br>
        <br>
    <% end %>
</div>
